pipeline {
    agent any
    options {
       timestamps()
    }
    parameters {
        choice(name:'profileName', choices:['Google','Qaclick'],description:'click on the profile name')
    }
    tools {
       jdk 'Java 8'
       maven 'Maven 3.6.3'
     }
     stages {
         stage('Checkout') {
            when {
             branch 'master'
            }
             steps  {
                git credentialsId: 'Suman Git', url: 'https://github.com/Suman-arch/fourth.git'
                     }
                            }
         stage('Clean') {
             steps  {
                bat "mvn clean "
                     }
                            }      
           stage('Compile') {
             steps  {
                bat "mvn compile "
                     }
                            }                 
          stage('Test') {
             steps  {              
                bat "mvn test -P${params.profileName} "
                    }
                          } 
        stage('Download') {
            steps {
            echo "Sending email "
                  }
       post {
        success {
                  mail to: 'abhishek260297@gmail.com',
                  subject: "Email Report from - '${env.JOB_NAME}'",
                  body: readFile("target/surefire-reports/emailable-report.html"),
                  mimeType:'text/html'
                 }
             }
                          }
         stage('User input') {
             input {
                 message "Should we continue?"
                 ok "Yes"
                   }
                             }
         stage('Email') {
            steps {
            echo "Sending email "
                  }
       post {
        success {
                  mail to: 'abhishek260297@gmail.com',
                  subject: "Email Report from - '${env.JOB_NAME}'",
                  body: readFile("target/index.html"),
                  mimeType:'text/html'
                 }
}
}
}
}
